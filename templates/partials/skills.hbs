<div id="skillContainer{{skill_id}}" class="col m-4 acds-clickable skill-container d-flex flex-column"
    style="border-radius: 20px; max-width: 250px;">
    <div class="row">
        <div class="col">
            <input class="acds-element skill-field" type="text" id="skill{{skill_id}}" value="{{value}}" maxlength="3"
                style="outline: 0; border-width: 0 0 1px; text-align: center; max-width: 80px; font-size: 18px;"
                onchange="skillChange(event, {{skill_id}})">
        </div>
    </div>
    <div class="row">
        <div class="col">
            <small class="skill-total" id="skillTotal{{skill_id}}"
                characteristic-id="{{characteristic_id}}">{{total_value}}</small>
        </div>
    </div>
    <div class="row h-100">
        <div id="skillLabel{{skill_id}}" class="col disable-select skill-label"
            onclick="skillDiceClick(event, {{skill_id}})" style="font-size: 16px;">{{name}}</div>
    </div>
</div>