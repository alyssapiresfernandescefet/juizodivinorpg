<tr class="player-equipment" data-equipment-id="{{equipment_id}}">
    <td>
        <i class="using bi {{#if using}}bi-check{{else}}bi-x{{/if}}"></i>
    </td>
    <td class="name">
        {{name}}
    </td>
    <td class="damage">
        {{damage}}
    </td>
    <td class="range">
        {{range}}
    </td>
    <td class="attacks">
        {{attacks}}
    </td>
</tr>