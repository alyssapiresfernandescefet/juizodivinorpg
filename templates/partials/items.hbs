<tr id="itemRow{{item_id}}">
    <td>
        <button class="acds-element" onclick="deleteItemClick(event, {{item_id}});"><i class="bi bi-trash"></i></button>
    </td>
    <td id="itemName{{item_id}}">{{name}}</td>
    <td>
        <input id="itemDescription{{item_id}}" class="acds-element" type="text" value="{{description}}"
            style="width: 40vw; border: none; color: lightgray" onchange="itemDescriptionChange(event, {{item_id}})">
    </td>
    <td>
        <input id="itemQuantity{{item_id}}" class="acds-element" type="text" value="{{quantity}}"
            style="border: none; color: lightgray" onchange="itemQuantityChange(event, {{item_id}})">
    </td>
</tr>